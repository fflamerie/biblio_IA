<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0">
  <info>
    <title>Style Garni</title>
    <id>http://www.zotero.org/styles/style-garni</id>
    <link href="http://www.zotero.org/styles/style-garni" rel="self"/>
    <author>
      <name>Généré par ChatGPT</name>
    </author>
    <category citation-format="author-date"/>
    <updated>2025-08-06T00:00:00+00:00</updated>
  </info>

  <macro name="author">
    <names variable="author">
      <name form="long" name-as-sort-order="all" sort-separator=" " delimiter=", " delimiter-precedes-last="always"/>
    </names>
  </macro>

  <macro name="issued">
    <choose>
      <if variable="original-date">
        <group delimiter=" ">
          <text value="["/>
          <date variable="original-date">
            <date-part name="year"/>
          </date>
          <text value="]"/>
          <date variable="issued">
            <date-part name="year"/>
          </date>
        </group>
      </if>
      <else>
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </else>
    </choose>
  </macro>

  <macro name="title">
    <choose>
      <if type="article-journal article-magazine article-newspaper" match="any">
        <text variable="title" quotes="true"/>
      </if>
      <else>
        <text variable="title" font-style="italic"/>
      </else>
    </choose>
  </macro>

  <macro name="container-title">
    <choose>
      <if type="chapter paper-conference" match="any">
        <text term="in" text-case="capitalize-first" suffix=" "/>
        <text variable="container-title" font-style="italic"/>
      </if>
      <else-if type="article-journal article-magazine article-newspaper" match="any">
        <text variable="container-title" font-style="italic"/>
      </else-if>
    </choose>
  </macro>

  <macro name="editor">
    <names variable="editor">
      <name form="long" delimiter=", " delimiter-precedes-last="always"/>
      <text term="editor" prefix=", " suffix=" (éd.)"/>
    </names>
  </macro>

  <macro name="pages">
    <group>
      <label variable="page" form="short" suffix=". " strip-periods="true"/>
      <text variable="page"/>
    </group>
  </macro>

  <citation collapse="year-suffix" disambiguate-add-year-suffix="true" disambiguate-add-names="true" year-suffix-delimiter="" after-collapse-delimiter=", ">
    <layout prefix="(" suffix=")" delimiter="; ">
      <text macro="author"/>
      <text macro="issued" prefix=", "/>
      <group delimiter=", ">
        <text variable="page" prefix="p. "/>
      </group>
    </layout>
  </citation>

  <bibliography hanging-indent="false" et-al-min="4" et-al-use-first="1" subsequent-author-substitute="">
    <sort>
      <key macro="author"/>
      <key variable="issued"/>
    </sort>
    <layout suffix=".">
      <text macro="author" suffix=", "/>
      <text macro="issued" suffix=", "/>
      <text macro="title" suffix=", "/>
      <text macro="container-title" suffix=", "/>
      <text macro="editor" suffix=", "/>
      <text variable="collection-title" suffix=", "/>
      <text variable="volume" prefix="vol. " suffix=", "/>
      <text variable="issue" prefix="no " suffix=", "/>
      <text variable="publisher-place" suffix=", "/>
      <text variable="publisher" suffix=", "/>
      <text macro="pages" prefix="p. "/>
    </layout>
  </bibliography>
</style>
